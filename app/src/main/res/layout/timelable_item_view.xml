<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="timeLable"
            type="stas.batura.radioproject.data.net.TimeLabel" />

        <variable
            name="podcast"
            type="stas.batura.radioproject.data.room.Podcast" />

        <variable
            name="mainviewModel"
            type="stas.batura.radioproject.MainActivityViewModel" />

    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:onClick="@{() -> mainviewModel.movingPlayToPosition(0L, podcast)}"
        >

        <TextView
            android:text="10.00"
            timelableTimeBind="@{timeLable}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            timelableTitleBind="@{timeLable}"
            android:text="Test title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>